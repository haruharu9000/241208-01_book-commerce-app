{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "react-hooks/exhaustive-deps": "warn", // useEffectの依存配列関連の警告を緩和
    "spaced-comment": ["error", "always"], // コメントのフォーマットルールを厳格化
    "no-undef": "off", // 環境変数の未定義警告を無効化
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto" // 改行コードの設定を自動に
      }
    ]
  },
  "plugins": ["prettier"], // Prettierプラグインを追加
  "env": {
    "browser": true,
    "node": true, // Node.js環境での実行をサポート
    "es2021": true // 最新のECMAScript機能をサポート
  }
}
